{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "target": "ES2021"
  },
  "include": [
    "./lib/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}